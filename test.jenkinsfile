        stage('fetch app code') {
            steps {
                // Haal de broncode op uit de repository
                sh 'mkdir calculator'
                dir('calculator')
                {
                    // We hebben dit geforkt om zo de poort te veranderen in de dockerfile
                    git branch: 'main', url: 'https://github.com/MirtheReynders/calculator-app-finished'
                }
            }
        }
